generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String
  role          String
  firmId        String?
  phone         String?
  department    String?
  barNumber     String?
  billableRate  Float?
  status        String    @default("active")
  joinDate      DateTime?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Password reset fields
  resetToken    String?   @unique
  resetTokenExpiry DateTime?
  
  // Invitation fields
  inviteToken       String?   @unique
  inviteTokenExpiry DateTime?
  invitedById       String?
  
  // Email notification preferences
  emailNotifications Boolean @default(true)
  notifyInvoices     Boolean @default(true)
  notifyDeadlines    Boolean @default(true)
  notifyTasks        Boolean @default(true)
  
  // 2FA fields
  twoFactorEnabled  Boolean @default(false)
  twoFactorSecret   String?
  
  // Google integration
  googleRefreshToken String?
  googleAccessToken  String?
  googleTokenExpiry  DateTime?
  
  timeEntries   TimeEntry[]
  documents     Document[]
  assignedTasks Task[]        @relation("AssignedTasks")
  createdTasks  Task[]        @relation("CreatedTasks")
  taskComments  TaskComment[]
  caseComments  CaseComment[]
  notificationLogs NotificationLog[]
  assignedSubtasks Subtask[] @relation("AssignedSubtasks")
  createdSubtasks  Subtask[] @relation("CreatedSubtasks")
  subtaskComments  SubtaskComment[]
}

model Case {
  id            String    @id @default(cuid())
  caseNumber    String    @unique
  title         String
  clientId      String?
  clientName    String?
  status        String
  type          String
  priority      String
  assignedTo    String?
  nextHearing   DateTime?
  description   String?   @db.Text
  dateOpened    DateTime?
  billingType   String?
  hourlyRate    Float?
  totalBilled   Float     @default(0)
  totalPaid     Float     @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Google Drive integration
  googleDriveFolderId String?
  
  // Dynamic custom fields (JSON)
  customFields  Json?
  
  invoices      Invoice[]
  documents     Document[]
  timeEntries   TimeEntry[]
  tasks         Task[]
  comments      CaseComment[]
  runsheetEntries RunsheetEntry[]
  
  @@index([caseNumber])
  @@index([status])
}

model Contact {
  id            String    @id @default(cuid())
  name          String
  email         String
  phone         String?
  mobile        String?
  organization  String?
  title         String?
  role          String?
  address       String?
  city          String?
  state         String?
  zip           String?
  category      String?
  notes         String?   @db.Text
  lastContact   DateTime?
  tags          String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // CRM fields
  crmStage      String?   @default("open")
  crmSource     String?
  crmValue      Float?
  crmProbability Int?
  crmExpectedCloseDate DateTime?
  crmLastActivityDate DateTime?
  
  // Google Contacts integration
  googleContactId   String?
  googleSourceId    String?   // Stable source ID from Google for dedupe
  googleSyncedAt    DateTime?
  googleSyncDirection String?  @default("one_way") // 'one_way', 'two_way', 'manual'
  
  // Lead capture
  isLead        Boolean   @default(false)
  leadSource    String?   // 'web_form', 'google_contacts', 'csv_import', 'manual'
  leadCustomFields Json?
  
  invoices      Invoice[]
  
  @@index([email])
  @@index([category])
  @@index([crmStage])
  @@index([googleContactId])
  @@index([isLead])
}

model Invoice {
  id              String    @id @default(cuid())
  invoiceNumber   String    @unique
  caseId          String?
  case            Case?     @relation(fields: [caseId], references: [id])
  contactId       String?
  contact         Contact?  @relation(fields: [contactId], references: [id])
  amount          Float
  status          String
  dueDate         DateTime?
  paidDate        DateTime?
  description     String?   @db.Text
  fileKey         String?
  fileName        String?
  mimeType        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  timeEntries     TimeEntry[]
  
  @@index([invoiceNumber])
  @@index([status])
}

model Document {
  id            String    @id @default(cuid())
  caseId        String?
  case          Case?     @relation(fields: [caseId], references: [id])
  name          String
  type          String?
  category      String?
  fileKey       String
  fileName      String
  mimeType      String
  size          Int
  uploadedBy    String?
  uploader      User?     @relation(fields: [uploadedBy], references: [id])
  tags          String[]
  createdAt     DateTime  @default(now())
  
  @@index([caseId])
}

model TimeEntry {
  id                    String    @id @default(cuid())
  matterId              String?
  matter                Case?     @relation(fields: [matterId], references: [id])
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
  taskId                String?
  task                  Task?     @relation(fields: [taskId], references: [id])
  description           String    @db.Text
  startedAt             DateTime?
  endedAt               DateTime?
  durationMinutesRaw    Int?
  durationMinutesBilled Int
  billingCodeId         String?
  billingCode           BillingCode? @relation(fields: [billingCodeId], references: [id])
  rateCentsApplied      Int
  amountCents           Int
  status                String    @default("draft")
  invoiceId             String?
  invoice               Invoice?  @relation(fields: [invoiceId], references: [id])
  tags                  String[]
  createdAt             DateTime  @default(now())
  
  @@index([userId])
  @@index([matterId])
  @@index([status])
  @@index([invoiceId])
  @@index([createdAt])
}

model Task {
  id            String    @id @default(cuid())
  title         String
  description   String?   @db.Text
  status        String    @default("pending")
  priority      String    @default("medium")
  dueDate       DateTime?
  caseId        String?
  case          Case?     @relation(fields: [caseId], references: [id])
  assignedToId  String?
  assignedTo    User?     @relation("AssignedTasks", fields: [assignedToId], references: [id])
  createdById   String
  createdBy     User      @relation("CreatedTasks", fields: [createdById], references: [id])
  orderIndex    Int       @default(0)
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  comments      TaskComment[]
  timeEntries   TimeEntry[]
  subtasks      Subtask[]
  
  @@index([status])
  @@index([assignedToId])
  @@index([caseId])
}

model TaskComment {
  id            String    @id @default(cuid())
  taskId        String
  task          Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  comment       String    @db.Text
  createdAt     DateTime  @default(now())
  
  @@index([taskId])
  @@index([userId])
}

model CaseComment {
  id            String    @id @default(cuid())
  caseId        String
  case          Case      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  comment       String    @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([caseId])
  @@index([userId])
  @@index([createdAt])
}

model BillingCode {
  id              String    @id @default(cuid())
  code            String    @unique
  label           String
  rateSource      String
  fixedRateCents  Int?
  overrideRole    String?
  active          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  timeEntries     TimeEntry[]
  
  @@index([code])
  @@index([active])
}

model RoleRate {
  id              String    @id @default(cuid())
  role            String    @unique
  rateCents       Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model NotificationLog {
  id              String    @id @default(cuid())
  userId          String?
  user            User?     @relation(fields: [userId], references: [id])
  recipientEmail  String
  recipientName   String?
  type            String    // 'invoice_overdue', 'invoice_upcoming', 'deadline_alert', 'task_assignment', 'password_reset', 'welcome'
  subject         String
  status          String    @default("sent") // 'sent', 'failed', 'bounced'
  metadata        Json?     // Additional data (invoice ID, task ID, etc.)
  sentAt          DateTime  @default(now())
  
  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([sentAt])
}

model Subtask {
  id            String    @id @default(cuid())
  title         String
  description   String?   @db.Text
  status        String    @default("pending")
  orderIndex    Int       @default(0)
  dueDate       DateTime?
  taskId        String
  task          Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  assignedToId  String?
  assignedTo    User?     @relation("AssignedSubtasks", fields: [assignedToId], references: [id])
  createdById   String
  createdBy     User      @relation("CreatedSubtasks", fields: [createdById], references: [id])
  dependsOnId   String?   // ID of subtask that must be completed first
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  comments      SubtaskComment[]
  
  @@index([taskId])
  @@index([status])
  @@index([assignedToId])
}

model SubtaskComment {
  id            String    @id @default(cuid())
  subtaskId     String
  subtask       Subtask   @relation(fields: [subtaskId], references: [id], onDelete: Cascade)
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  comment       String    @db.Text
  mentions      String[]  // Array of user IDs mentioned
  createdAt     DateTime  @default(now())
  
  @@index([subtaskId])
  @@index([userId])
}

model RunsheetEntry {
  id            String    @id @default(cuid())
  caseId        String
  case          Case      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  type          String    // 'manual', 'time_entry', 'task_created', 'task_completed', 'subtask_completed', 'comment', 'time_entry_created', 'time_entry_edited', 'time_entry_deleted', 'time_entry_status_change'
  title         String
  description   String?   @db.Text
  userId        String?
  userName      String?
  metadata      Json?     // Additional context (task ID, time entry ID, etc.)
  createdAt     DateTime  @default(now())
  
  comments      RunsheetComment[]
  
  @@index([caseId])
  @@index([type])
  @@index([createdAt])
}

model RunsheetComment {
  id              String    @id @default(cuid())
  runsheetEntryId String
  runsheetEntry   RunsheetEntry @relation(fields: [runsheetEntryId], references: [id], onDelete: Cascade)
  parentId        String?   // For threaded replies
  userId          String
  userName        String?
  comment         String    @db.Text
  mentions        String[]  // Array of user IDs mentioned
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([runsheetEntryId])
  @@index([parentId])
  @@index([userId])
}

model CaseFieldTemplate {
  id            String    @id @default(cuid())
  name          String
  caseType      String    // 'civil', 'criminal', 'family', etc.
  fields        Json      // Array of field definitions: [{name, type, required, options}]
  isDefault     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([caseType])
}

model AiConversation {
  id            String    @id @default(cuid())
  userId        String
  caseId        String?
  title         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  messages      AiMessage[]
  
  @@index([userId])
  @@index([caseId])
}

model AiMessage {
  id              String    @id @default(cuid())
  conversationId  String
  conversation    AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role            String    // 'user', 'assistant'
  content         String    @db.Text
  proposedActions Json?     // Array of ProposedAction objects
  appliedAt       DateTime? // When actions were applied
  createdAt       DateTime  @default(now())
  
  @@index([conversationId])
}

model AiAuditLog {
  id              String    @id @default(cuid())
  userId          String
  conversationId  String?
  actionType      String    // 'create', 'update', 'delete', 'link', 'unlink'
  entityType      String    // 'case', 'contact', 'task', 'subtask', 'time_entry', 'invoice', 'runsheet'
  entityId        String?
  fieldsBefore    Json?
  fieldsAfter     Json?
  description     String    @db.Text
  createdAt       DateTime  @default(now())
  
  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
}

model Event {
  id            String    @id @default(cuid())
  title         String
  description   String?   @db.Text
  startTime     DateTime
  endTime       DateTime
  allDay        Boolean   @default(false)
  location      String?
  type          String    @default("event") // 'event', 'hearing', 'deadline', 'meeting', 'reminder'
  color         String?   // hex color for calendar display
  caseId        String?
  assignedToId  String?
  createdById   String
  recurrence    String?   // 'none', 'daily', 'weekly', 'monthly', 'yearly'
  reminderMinutes Int?    // minutes before event to send reminder
  googleEventId String?   // linked Google Calendar event ID
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([startTime])
  @@index([endTime])
  @@index([caseId])
  @@index([assignedToId])
  @@index([createdById])
  @@index([type])
}

model LeadFormSubmission {
  id            String    @id @default(cuid())
  name          String
  email         String
  phone         String?
  message       String?   @db.Text
  customFields  Json?
  source        String?   // URL or identifier of the form
  contactId     String?   // Linked contact if converted
  status        String    @default("new") // 'new', 'contacted', 'converted', 'rejected'
  createdAt     DateTime  @default(now())
  
  @@index([email])
  @@index([status])
  @@index([createdAt])
}
