# Backend Environment Variables
# Copy this to .env and fill in your values

# Database - Neon PostgreSQL
DATABASE_URL=postgresql://username:password@your-neon-endpoint.neon.tech/dbname?sslmode=require

# JWT Secret - Generate a random string
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=3001

# Environment
NODE_ENV=production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Admin Email (for testing)
ADMIN_EMAIL=your-admin-email@example.com

# OpenAI API Key (for AI Assistant)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Mail Provider Configuration
# Choose provider: resend or unosend (defaults to resend if not set)
MAIL_PROVIDER=resend

# Resend Configuration (if using MAIL_PROVIDER=resend)
RESEND_API_KEY=re_your-resend-api-key-here

# Unosend Configuration (if using MAIL_PROVIDER=unosend)
UNOSEND_API_KEY=un_your-unosend-api-key-here
UNOSEND_API_BASE_URL=https://api.unosend.com/v1

# Email From Address (used by all providers)
EMAIL_FROM=LegalTrack <noreply@yourdomain.com>
